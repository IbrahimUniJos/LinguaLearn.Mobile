<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="LinguaLearn.Mobile.Components.LessonProgressIndicator"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls">

    <StackLayout Spacing="10" Padding="20,10">
        <!-- Progress Bar -->
        <ProgressBar x:Name="MainProgressBar"
                     ProgressColor="{StaticResource Primary}"
                     BackgroundColor="{StaticResource SurfaceVariant}"
                     HeightRequest="6" />
        
        <!-- Progress Text -->
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="Fill">
            <Label x:Name="CurrentSectionLabel"
                   Text="Section 1"
                   FontFamily="OpenSansRegular"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}"
                   HorizontalOptions="Start" />
            
            <Label x:Name="ProgressLabel"
                   Text="1 of 5"
                   FontFamily="OpenSansRegular"
                   FontSize="14"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Fill" />
        </StackLayout>
        
        <!-- XP Counter -->
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="5"
                     IsVisible="{Binding XPEarned, Converter={StaticResource IntToBoolConverter}}">
            <Label Text="⭐"
                   FontSize="16" />
            <Label x:Name="XPLabel"
                   Text="+0 XP"
                   FontFamily="OpenSansSemibold"
                   FontSize="14"
                   TextColor="{StaticResource Primary}" />
        </StackLayout>
    </StackLayout>
</ContentView>